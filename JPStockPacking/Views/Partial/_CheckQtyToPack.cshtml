<div class="card d-flex">
    <div class="card-header">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 d-flex align-items-center">
                <h3 class="card-title">ค้นหาคำสั่งซื้อ</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Form Section -->
            <div class="col-8">
                <!-- Search Row -->
                <div class="row justify-content-center mb-3">
                    <div class="col-10 col-md-10 col-lg-8">
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <label for="txtFindOrderNo" class="form-label mb-0 text-end" style="width:80px;">OrderNo</label>
                            <input type="text"
                                   id="txtFindOrderNo"
                                   class="form-control me-2"
                                   placeholder="กรอก OrderNo"
                                   style="width:180px;" />
                            <button class="btn btn-primary" id="btnFindOrderToSend">ค้นหา</button>
                            <button class="btn btn-secondary" id="btnClearSearch">Clear</button>
                        </div>
                    </div>
                </div>

                <!-- Customer Info Row -->
                <div class="row justify-content-center mb-3">
                    <div class="col-10 col-md-10 col-lg-8">
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <label for="txtCustCode" class="form-label mb-0 text-end" style="width:80px;">CustCode</label>
                            <input type="text"
                                   id="txtCustCode"
                                   class="form-control text-center"
                                   style="width:100px;"
                                   value=""
                                   disabled />
                            <label for="txtGrade" class="form-label mb-0 text-end" style="width:50px;">Grade</label>
                            <input type="text"
                                   id="txtGrade"
                                   class="form-control text-center"
                                   style="width:50px;"
                                   value=""
                                   disabled />
                            <label for="txtSCountry" class="form-label mb-0 text-end" style="width:70px;">SCountry</label>
                            <input type="text"
                                   id="txtSCountry"
                                   class="form-control text-center"
                                   style="width:150px;"
                                   value=""
                                   disabled />
                        </div>
                    </div>
                </div>

                <!-- Product Info Row -->
                <div class="row justify-content-center">
                    <div class="col-10 col-md-10 col-lg-8">
                        <div class="d-flex align-items-center gap-2 flex-wrap mb-2">
                            <label for="txtListNo" class="form-label mb-0 text-end" style="width:80px;">ListNo</label>
                            <input type="text"
                                   id="txtListNo"
                                   class="form-control"
                                   style="width:180px;"
                                   value=""
                                   disabled />
                        </div>
                        <div class="d-flex align-items-center gap-2 flex-wrap mb-2">
                            <label for="txtEdesFn" class="form-label mb-0 text-end" style="width:80px;">EdesFn</label>
                            <input type="text"
                                   id="txtEdesFn"
                                   class="form-control"
                                   style="width:250px;"
                                   value=""
                                   disabled />
                        </div>
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <label for="txtTdesArt" class="form-label mb-0 text-end" style="width:80px;">TdesArt</label>
                            <input type="text"
                                   id="txtTdesArt"
                                   class="form-control"
                                   style="width:250px;"
                                   value=""
                                   disabled />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-auto d-flex justify-content-center align-items-center ps-3 pe-4">
                <img id="imgLot"
                     src="./img/blankimg.jpg"
                     width="250"
                     height="250"
                     class="img-thumbnail"
                     alt="Product Image"
                     style="object-fit:contain;">
            </div>
        </div>
    </div>
</div>

<div class="card d-flex">
    <div class="card-header">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 d-flex justify-content-between align-items-center">
                <h3 class="card-title">รายการล็อต</h3>
                <div id="actionButtons" class="d-none">
                    <button class="btn btn-secondary me-2" id="btnClearQty">Clear</button>
                    <button class="btn btn-warning me-2 d-none" id="btnEditQty">แก้ไข</button>
                    <button class="btn btn-primary me-2" id="btnSubmitOrderToSend">แจ้งยอด</button>
                </div>
                <div id="reportButtons" class="d-none">
                    <button class="btn btn-primary me-2" onclick="printToPDF(1)"><i class="fas fa-print"></i> Packing</button>
                    <button class="btn btn-info me-2" onclick="printToPDF(2)"><i class="fas fa-print"></i> QA</button>
                    <button class="btn btn-warning me-2" onclick="printToPDF(3)"><i class="fas fa-print"></i> QC</button>
                    <button class="btn btn-success me-2" onclick="printToPDF(4)"><i class="fas fa-print"></i> Export</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body table-responsive pt-0" style="height: 73vh;">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <table id="tblOrderToSend" class="table table-bordered table-head-fixed table-hover text-nowrap p-0">
                    <thead>
                        <tr>
                            <th style="width: 5%" class="text-center">#</th>
                            <th style="width: 20%" class="text-left">เลขล็อต</th>
                            <th style="width: 15%" class="text-left">รหัสสินค้า</th>
                            <th style="width: 15%" class="text-right">จำนวนทั้งหมด</th>
                            <th style="width: 15%" class="text-right">จำนวนซิ</th>
                            <th style="width: 15%" class="text-right">ส่งแพ็คแล้ว</th>
                            <th class="text-center">แจ้งยอดส่งแพ็ค <span style="color:red;">*</span> ไม่เกิน 2% ของจำนวนเสีย</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="7" class="text-center">กรุณาค้นหา Order</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row justify-content-center">
            <div id="actionButtons" class="col-12 col-md-10 col-lg-8 justify-content-end gap-2 d-none">
                <button class="btn btn-secondary me-2" id="btnClearQty">Clear</button>
                <button class="btn btn-warning me-2" id="btnEditQty">แก้ไข</button>
                <button class="btn btn-primary me-2" id="btnSubmitOrderToSend">Submit</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="modal-force-send-qty">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="txtTitleForceSendQTY"><i class="fas fa-edit"></i> ยืนยันการแจ้งยอดโดยหัวหน้างาน</h4>
                <input type="hidden" id="hddUserID" value="" />
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body" style="display: block;">
                    <div class="row">
                        <label class="form-label" >ตรวจสอบสิทธิ</label>
                        <div class="input-group mb-3">
                            <input id="txtUsername" type="text" class="form-control" placeholder="Username" required>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input id="txtPassword" type="password" class="form-control" placeholder="Password" required>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <button id="btnCheckAuthForceSendQTY" class="btn btn-primary btn-block">ตรวจสอบสิทธิ</button>
                    </div>
                    <div class="row pt-4" >
                        <div class="input-group mb-3 d-flex justify-content-end align-content-center">
                            <label class="form-label pr-2" for="txtforce-adjust-qty">แจ้งยอดแบบกำหนดเอง</label>
                            <input type="number" id="txtforce-adjust-qty" class="form-control" min="0" max="99999999" style="width: 180px;"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-default" onclick="CloseModal()">ปิด</button>
                <button class="btn btn-primary me-2" id="btnSubmitForceSendQTY">ยืนยัน</button>
            </div>
        </div>
    </div>
</div>

<div id="page-title" data-title="แจ้งยอดบรรจุ"></div>