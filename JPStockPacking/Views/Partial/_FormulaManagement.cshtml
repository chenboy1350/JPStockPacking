<div class="modal fade" id="modal-add-formula">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Formula</h4>
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card card-default">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-4 mt-2">
                                    <label>Formula Name</label>
                                    <input type="text" id="txtFormulaName" class="form-control" placeholder="Enter Name">
                                </div>
                                <div class="col-4 mt-2">
                                    <label>Customer Group</label>
                                    <select id="ddlCustomerGroup" name="ddlCustomerGroup" class="form-control" style="width: 100%">
                                        <option value="" selected>-- Select Group --</option>
                                        @foreach (var group in ViewBag.CustomerGroups)
                                        {
                                            <option value="@group.CustomerGroupId">(@group.CustomerGroupId) @group.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>Product Type</label>
                                    <select id="ddlProductType" name="ddlProductType" class="form-control" style="width: 100%">
                                        <option value="" selected>-- Selcet Product --</option>
                                        @foreach (var group in ViewBag.ProductionTypes)
                                        {
                                            <option value="@group.ProductTypeId">(@group.ProductTypeId) @group.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>Pack Method</label>
                                    <select id="ddlPackMethod" name="ddlPackMethod" class="form-control" style="width: 100%">
                                        <option value="" selected>-- Select Method --</option>
                                        @foreach (var group in ViewBag.PackMethods)
                                        {
                                            <option value="@group.PackMethodId">(@group.PackMethodId) @group.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>Item Count</label>
                                    <input type="number" id="txtItemCount" class="form-control" >
                                </div>
                                <div class="col-4 mt-2">
                                    <label>P1</label>
                                    <input type="number" id="txtP1" class="form-control">
                                </div>
                                <div class="col-4 mt-2">
                                    <label>P2</label>
                                    <input type="number" id="txtP2" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" onclick="CloseModal()">Close</button>
                <button type="button" id="btnConfirmAddFormula" class="btn btn-info">Save</button>
            </div>
        </div>
    </div>
</div>

