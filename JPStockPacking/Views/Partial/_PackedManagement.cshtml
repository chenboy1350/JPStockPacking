<style>
    /* Override global table styles */
    .table-packed-custom thead th {
        font-size: 1.1rem !important; /* Adjusted slightly smaller than 1.4rem which might be too big, but user asked for bigger */
    }
    .table-packed-custom tbody td {
        font-size: 1.1rem !important;
    }
    /* Specific override for the header row if user wants it even bigger */
    .table-packed-custom .header-row-1 th {
        font-size: 1.1rem !important;
    }
</style>
<div class="container-fluid">
    <div class="card d-flex">
        <div class="card-header">
            <h3 class="card-title">ค้นหาคำสั่งซื้อ</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>OrderNo</label>
                        <input type="text" id="txtOrderNo" class="form-control">
                    </div>
                </div>
            </div>
            <button class="btn btn-secondary" onclick="ClearSearch()">Clear</button>
            <button class="btn btn-primary" onclick="FindOrderToStore()">ค้นหา</button>
        </div>
    </div>

    <div class="row">
        <div class="card d-flex">
            <div class="card-header justify-content-between align-content-center">
                <div class="d-flex justify-content-end flex-wrap gap-2">
                    <!-- Navigation to ListNo -->
                    <div class="d-none" id="divGoToListNo">
                        <div class="d-flex align-items-center gap-2 me-2">
                            <input type="text" id="txtGoToListNo" class="form-control form-control-sm" style="width: 100px;" placeholder="ListNo">
                            <button class="btn btn-primary btn-sm" onclick="goToListNo()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <button class="btn btn-info btn-sm d-none action-btn" id="btnSelect" onclick="showSelection()">
                        <i class="fas fa-list-ul"></i> <span class="d-none d-sm-inline">เลือก</span>
                    </button>
                    <div class="btn-group d-none" id="btnConfirmSendToStore">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle action-btn" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-paper-plane"></i> <span class="d-none d-sm-inline">ยืนยันส่ง</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="confirmSendAll()"><i class="fas fa-check-double text-success"></i> ยืนยันทั้งหมด</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" onclick="confirmSendStore()"><i class="fas fa-warehouse text-primary"></i> ยืนยันส่งคลัง (Store)</a></li>
                            <li><a class="dropdown-item" href="#" onclick="confirmSendMelt()"><i class="fas fa-fire text-warning"></i> ยืนยันหลอม (Melt)</a></li>
                            <li><a class="dropdown-item" href="#" onclick="confirmSendExport()"><i class="fas fa-truck text-success"></i> ยืนยันส่งออก (Export)</a></li>
                            <li><a class="dropdown-item" href="#" onclick="confirmSendLost()"><i class="fas fa-question-circle text-danger"></i> ยืนยันหาย (Lost)</a></li>
                        </ul>
                    </div>
                    <button class="btn btn-info btn-sm d-none action-btn" id="btnPrintSendToStore" onclick="printSendToStore()">
                        <i class="fas fa-print"></i> <span class="d-none d-sm-inline">พิมพ์รายงาน</span>
                    </button>
                    <button class="btn btn-secondary btn-sm d-none action-btn" id="btnUnselect" onclick="hideSelection()">
                        <i class="fas fa-times"></i> <span class="d-none d-sm-inline">ยกเลิก</span>
                    </button>
                </div>
            </div>
            <div class="card-body table-responsive" style="height:87vh; padding: 0px !important;">
                <table class="table table-head-fixed text-nowrap table-packed-custom" style="overflow: auto !important;">
                    <thead>
                        <tr class="header-row-1">
                            <th style="min-width: 20px;" class="text-center align-middle">#</th>
                            <th style="min-width: 120px;" class="text-center align-middle">รหัสสินค้า</th>
                            <th style="min-width: 60px;" class="text-center align-middle">ลำดับ</th>
                            <th style="min-width: 60px;" class="text-center align-middle">ยอดสั่ง</th>
                            <th style="min-width: 50px;" class="text-center align-middle">Si</th>
                            <th style="min-width: 60px;" class="text-center align-middle">ส่งแพ็ค</th>
                            <th style="min-width: 60px;" class="text-center align-middle">แจ้งยอด</th>
                            <th style="min-width: 60px;" class="text-center align-middle">แพ็คแล้ว</th>
                            <th style="min-width: 60px;" class="text-center align-middle">คงเหลือ</th>
                            <th style="min-width: 100px;" class="align-middle">
                                <div id="selectAllLotToStore" class="d-none">
                                    <div class="chk-wrapper">
                                        <input type="checkbox" id="chkSelectAllLotToStore" class="custom-checkbox">
                                        <label for="chkSelectAllLotToStore" class="ms-2 mb-0">เลือกทั้งหมด</label>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbl-sendToStore-body">
                        <tr>
                            <td colspan="10" class="text-center text-muted">ค้นหาคำสั่งซื้อ</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-edit-store" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">แก้ไขจำนวน "ส่งเข้าคลัง (Store)"</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalStoreLotNo">
                    <input type="hidden" id="modalStoreMaxQty">
                    <div class="mb-2">
                        <label class="form-label">จำนวน (สูงสุด: <span id="maxStoreQtyLabel">0</span>)</label>
                        <input type="number" id="modalStoreQty" class="form-control" min="0" step="0.5" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnStoreQtyConfirm">ยืนยัน</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-edit-melt" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">แก้ไขจำนวน "หลอม (Melt)"</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalMeltLotNo">
                    <input type="hidden" id="modalMeltMaxQty">

                    <div class="mb-2">
                        <label class="form-label">จำนวนที่ต้องการหลอม (สูงสุด: <span id="maxMeltQtyLabel">0</span>)</label>
                        <input type="number" id="modalMeltQty" class="form-control" min="0" step="0.5" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">น้ำหนัก (กรัม)</label>
                        <input type="number" id="modalMeltWg" class="form-control" min="0" step="0.01" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">เลือกสาเหตุ</label>
                        <select id="modalMeltReasonId" class="form-select" style="width: 100%">
                            <option value="" selected>-- เลือกสาเหตุ --</option>
                            @foreach (var des in ViewBag.BreakDescriptions)
                            {
                                <option value="@des.BreakDescriptionId">(@des.BreakDescriptionId) @des.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" id="btnMeltQtyConfirm">ยืนยัน</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-edit-lost" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">แก้ไขจำนวน "สูญหาย (Lost)"</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalLostLotNo">
                    <input type="hidden" id="modalLostMaxQty">
                    <div class="mb-2">
                        <label class="form-label">จำนวน (สูงสุด: <span id="maxLostQtyLabel">0</span>)</label>
                        <input type="number" id="modalLostQty" class="form-control" min="0" step="0.5" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" id="btnLostQtyConfirm">ยืนยัน</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-edit-export" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">แก้ไขจำนวน "ส่งเข้าคลัง (Export)"</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalExportLotNo">
                    <input type="hidden" id="modalExportMaxQty">
                    <div class="row">
                        <div class="col-10 mb-2">
                            <label class="form-label">จำนวน (สูงสุด: <span id="maxExportQtyLabel">0</span>)</label>
                            <input type="number" id="modalExportQty" class="form-control" min="0" step="0.5" />
                        </div>
                        <div class="col-2 align-content-lg-center">
                            <label class="form-label">ส่งเกิน</label>
                            <button type="button" class="btn btn-warning" onclick="ShowForceSendToModal(this)"><i class="fas fa-sliders-h"></i></button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnExportQtyConfirm">ยืนยัน</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-force-send-to-export">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="txtTitleForceSendToExport"><i class="fas fa-edit"></i> ยืนยันการส่งออกเกินยอดที่แจ้ง</h4>
                    <input type="hidden" id="hddUserID" value="" />
                    <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <label class="form-label">ตรวจสอบสิทธิ</label>
                            <div class="input-group mb-3">
                                <input id="txtUsername" type="text" class="form-control" placeholder="Username" required>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input id="txtPassword" type="password" class="form-control" placeholder="Password" required>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <button id="btnCheckAuthForceSendToExport" class="btn btn-primary btn-block">ตรวจสอบสิทธิ</button>
                        </div>
                        <div class="row pt-4">
                            <div class="input-group mb-3 d-flex justify-content-end align-content-center">
                                <label class="form-label pr-2" for="txtforce-adjust-qty">ส่งออกแบบกำหนดเอง</label>
                                <input type="number" id="txtforce-adjust-qty" class="form-control" min="0" max="99999999" style="width: 180px;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-default" onclick="CloseModal()">ปิด</button>
                    <button class="btn btn-primary me-2" id="btnSubmitForceSendToExport">ยืนยัน</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Action Buttons (specific to this page) -->
    <div class="floating-actions" id="floatingActions">
        <!-- Go to ListNo -->
        <div class="floating-goto hidden" id="floatingGoTo">
            <input type="text" id="txtGoToListNoFloat" class="form-control form-control-sm" placeholder="ListNo">
            <button class="btn btn-primary btn-sm" onclick="goToListNoFloat()" title="ไปยัง ListNo">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <button class="btn btn-info hidden" id="btnSelectFloat" onclick="showSelection()" title="เลือก">
            <i class="fas fa-list-ul"></i>
        </button>
        <div class="dropup hidden" id="btnConfirmFloat">
            <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="ยืนยันส่ง">
                <i class="fas fa-paper-plane"></i>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="confirmSendAll()"><i class="fas fa-check-double text-success"></i> ยืนยันทั้งหมด</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#" onclick="confirmSendStore()"><i class="fas fa-warehouse text-primary"></i> ส่งคลัง</a></li>
                <li><a class="dropdown-item" href="#" onclick="confirmSendMelt()"><i class="fas fa-fire text-warning"></i> หลอม</a></li>
                <li><a class="dropdown-item" href="#" onclick="confirmSendExport()"><i class="fas fa-truck text-success"></i> ส่งออก</a></li>
                <li><a class="dropdown-item" href="#" onclick="confirmSendLost()"><i class="fas fa-question-circle text-danger"></i> หาย</a></li>
            </ul>
        </div>
        <button class="btn btn-info hidden" id="btnPrintFloat" onclick="printSendToStore()" title="พิมพ์รายงาน">
            <i class="fas fa-print"></i>
        </button>
        <button class="btn btn-secondary hidden" id="btnUnselectFloat" onclick="hideSelection()" title="ยกเลิก">
            <i class="fas fa-times"></i>
        </button>
    </div>
</div>


<div id="page-title" data-title="รายการส่งออก"></div>