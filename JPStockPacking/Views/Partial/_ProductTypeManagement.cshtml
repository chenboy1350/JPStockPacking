@model List<JPStockPacking.Data.SPDbContext.Entities.ProductType>

<div class="container-fluid">
    <div class="row">
        <div class="card d-flex">
            <div class="card-header justify-content-between align-content-center">
                <div class="justify-content-center">
                    <h3 class="card-title">รายการประเภทสินค้า</h3>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" onclick="showAddProductTypeModal()"><i class="fas fa-plus-circle"></i> เพิ่มประเภทสินค้า</button>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive" style="height:87vh; padding: 0px !important;">
                <table id="tbl-main" class="table table-head-fixed text-nowrap table-packed-custom" style="overflow: auto !important;">
                    <thead>
                        <tr>
                            <th class="text-start">#</th>
                            <th class="text-start">ชื่อประเภทสินค้า</th>
                            <th class="text-start">BaseTime</th>
                            <th class="text-start">วันที่สร้าง</th>
                            <th class="text-start">แก้ไขล่าสุด</th>
                            <th class="text-start">สถานะ</th>
                            <th class="text-start">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-product-type">
                        @{ int idx = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-start">@(idx++)</td>
                                <td class="text-start">@item.Name</td>
                                <td class="text-start">@item.BaseTime</td>
                                <td class="text-start">@item.CreateDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-start">@item.UpdateDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="col-status">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">เปิดใช้งาน</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">ปิดใช้งาน</span>
                                    }
                                </td>
                                <td class="col-action">
                                    <button class="btn btn-info btn-sm" onclick="showEditProductTypeModal(@item.ProductTypeId)">
                                        <i class="fas fa-pen-square"></i> แก้ไข
                                    </button>
                                    @if (item.IsActive)
                                    {
                                        <button class="btn btn-danger btn-sm" onclick="toggleProductTypeStatus(@item.ProductTypeId, false)">
                                            <i class="fas fa-window-close"></i> ปิดใช้งาน
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success btn-sm" onclick="toggleProductTypeStatus(@item.ProductTypeId, true)">
                                            <i class="fas fa-check-square"></i> เปิดใช้งาน
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-add-product-type">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">เพิ่มประเภทสินค้า</h4>
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card card-default">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-6 mt-2">
                                    <label>ชื่อประเภทสินค้า</label>
                                    <input type="text" id="txtAddProductTypeName" class="form-control" placeholder="กรอกชื่อประเภทสินค้า">
                                </div>
                                <div class="col-6 mt-2">
                                    <label>BaseTime</label>
                                    <input type="number" step="0.01" id="txtAddBaseTime" class="form-control" placeholder="กรอก BaseTime">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" onclick="CloseModal()">Close</button>
                <button type="button" id="btnConfirmAddProductType" class="btn btn-info">เพิ่มประเภทสินค้า</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-edit-product-type">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">แก้ไขประเภทสินค้า</h4>
                <input type="hidden" id="hddProductTypeID" />
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card card-default">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-6 mt-2">
                                    <label>ชื่อประเภทสินค้า</label>
                                    <input type="text" id="txtEditProductTypeName" class="form-control">
                                </div>
                                <div class="col-6 mt-2">
                                    <label>BaseTime</label>
                                    <input type="number" step="0.01" id="txtEditBaseTime" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" onclick="CloseModal()">Close</button>
                <button type="button" id="btnConfirmEditProductType" class="btn btn-info">ยืนยันการแก้ไข</button>
            </div>
        </div>
    </div>
</div>

<div id="page-title" data-title="จัดการประเภทสินค้า"></div>
