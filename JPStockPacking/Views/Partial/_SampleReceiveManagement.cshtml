@model List<JPStockPacking.Models.ReceivedListModel>
@{

}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="accordion" id="accordionFilter">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFilter">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                                <strong>ค้นหา</strong>
                            </button>
                        </h2>
                        <div id="collapseFilter" class="accordion-collapse collapse" aria-labelledby="headingFilter" data-bs-parent="#accordionFilter">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>เลขใบส่ง</label>
                                            <input type="text" id="txtFindSampleReceivedNo" class="form-control" placeholder="กรอก ReceiveNo">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>เลขที่งาน</label>
                                            <input type="text" id="txtFindSampleLotNo" class="form-control" placeholder="กรอก LotNo">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-secondary" onclick="ClearFindBySampleReceive()">Clear</button>
                                <button class="btn btn-primary" onclick="findSampleReceive()">ค้นหา</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card d-flex">
            <div class="card-header justify-content-between align-content-center">
                <div class="justify-content-center">
                    <h3 class="card-title">รายการใบส่ง (Sample)</h3>
                </div>
            </div>
            <div class="card-body table-responsive" style="height:87vh; padding: 0px !important;">
                <table id="tbl-sample-main" class="table table-head-fixed text-nowrap table-packed-custom" style="overflow: auto !important;">
                    <thead>
                        <tr>
                            <th class="text-start">#</th>
                            <th class="text-start">เลขที่ใบส่ง</th>
                            <th class="text-start">วันที่ส่ง</th>
                            <th class="text-start">สถานะ</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody id="tbl-sample-receive-list-body">
                        @foreach (var item in Model)
                        {
                            <tr data-receive-no="@item.ReceiveNo">
                                <td>#</td>
                                <td class="col-receiveno"><strong>@item.ReceiveNo</strong></td>
                                <td class="col-mdate">@item.Mdate</td>

                                @if (item.IsReceived && !item.HasRevButNotAll)
                                {
                                    <td class="col-status">
                                        <span class="badge badge-success">รับเข้าครบแล้ว</span>
                                    </td>
                                    <td class="col-action">
                                        <button class="btn btn-danger btn-sm" onclick="showModalCancelSampleLot('@item.ReceiveNo')">
                                            <i class="fas fa-folder"></i> ยกเลิกรายการ
                                        </button>
                                    </td>
                                }
                                else if (item.HasRevButNotAll && !item.IsReceived)
                                {
                                    <td class="col-status">
                                        <span class="badge badge-warning">รับเข้ายังไม่ครบ</span>
                                    </td>
                                    <td class="col-action">
                                        <button class="btn btn-warning btn-sm" onclick="showModalUpdateSampleLot('@item.ReceiveNo')">
                                            <i class="fas fa-folder"></i> รับเข้า
                                        </button>
                                        <button class="btn btn-danger btn-sm" onclick="showModalCancelSampleLot('@item.ReceiveNo')">
                                            <i class="fas fa-folder"></i> ยกเลิกรายการ
                                        </button>
                                    </td>
                                }
                                else
                                {
                                    <td class="col-status">
                                        <span class="badge badge-secondary">รอรับเข้า</span>
                                    </td>
                                    <td class="col-action">
                                        <button class="btn btn-warning btn-sm" onclick="showModalUpdateSampleLot('@item.ReceiveNo')">
                                            <i class="fas fa-folder"></i> รับเข้า
                                        </button>
                                        <button class="btn btn-danger btn-sm" onclick="showModalCancelSampleLot('@item.ReceiveNo')">
                                            <i class="fas fa-folder"></i> ยกเลิกรายการ
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-sample-update">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="txtTitleSampleUpdate"><i class='fas fa-folder-plus'></i> รายการนำเข้าใบรับ (Sample) :</h4>
                <input type="hidden" id="hddSampleReceiveNo" value="" />
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body table-responsive" style="height:87vh; padding: 0px !important;">
                    <table class="table table-head-fixed text-nowrap table-packed-custom" style="overflow: auto !important;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>รหัสลูกค้า</th>
                                <th>OrderNo</th>
                                <th>LotNo</th>
                                <th>ลำดับที่</th>
                                <th>Fn</th>
                                <th>รหัสสินค้า</th>
                                <th>จำนวน</th>
                                <th>น้ำหนักรวม(g)</th>
                                <th class="text-center">
                                    <div class="chk-wrapper">
                                        <input type="checkbox" id="chkSampleSelectAll" class="custom-checkbox" checked>
                                        <label for="chkSampleSelectAll" class="ms-2 mb-0">เลือก</label>
                                    </div>
                                </th>

                            </tr>
                        </thead>
                        <tbody id="tbl-sample-received-body">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-warning" id="btnUpdateSampleLot">รับเข้ารายการที่เลือก</button>
                <button type="button" class="btn btn-default" onclick="CloseModal()">ปิด</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-sample-cancel-update">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="txtTitleSampleCancelUpdate"><i class='fas fa-folder-plus'></i> รายการนำเข้าใบรับ (Sample) :</h4>
                <input type="hidden" id="hddSampleCancelReceiveNo" value="" />
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body table-responsive" style="padding: 0px !important;">
                    <table class="table table-head-fixed text-nowrap table-packed-custom">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>รหัสลูกค้า</th>
                                <th>OrderNo</th>
                                <th>LotNo</th>
                                <th>ลำดับที่</th>
                                <th>เลขที่งาน</th>
                                <th>รหัสสินค้า</th>
                                <th>จำนวน</th>
                                <th>น้ำหนักรวม(g)</th>
                                <th class="text-center">
                                    <div class="chk-wrapper">
                                        <input type="checkbox" id="chkSampleSelectAll" class="custom-checkbox" checked>
                                        <label for="chkSampleSelectAll" class="ms-2 mb-0">เลือก</label>
                                    </div>
                                </th>

                            </tr>
                        </thead>
                        <tbody id="tbl-sample-cancel-received-body">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-danger" id="btnCancelUpdateSampleLot">ยกเลิกรายการที่เลือก</button>
                <button type="button" class="btn btn-default" onclick="CloseModal()">ปิด</button>
            </div>
        </div>
    </div>
</div>

<div id="page-title" data-title="ใบรับสินค้า Sample"></div>
