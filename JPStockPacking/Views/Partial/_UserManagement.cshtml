@model List<JPStockPacking.Models.UserModel>

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="accordion" id="accordionFilter">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFilter">
                            <button class="accordion-button collapsed show" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                                <strong>ค้นหา</strong>
                            </button>
                        </h2>
                        <div id="collapseFilter" class="accordion-collapse collapse" aria-labelledby="headingFilter" data-bs-parent="#accordionFilter">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>ชื่อผู้ใช้</label>
                                            <input type="text" id="txt" class="form-control" placeholder="กรอก Username">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-secondary" onclick="">Clear</button>
                                <button class="btn btn-primary" onclick="">ค้นหา</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card d-flex">
            <div class="card-header justify-content-between align-content-center">
                <div class="justify-content-center">
                    <h3 class="card-title">รายชื่อผู้ใช้</h3>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" onclick="showAddUserModal()"><i class="fas fa-user-plus"></i> เพิ่มผู้ใช้ใหม่</button>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0" style="height:87vh">
                <table id="tbl-main" class="table table-head-fixed table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th class="text-start">#</th>
                            <th class="text-start">Username</th>
                            <th class="text-start">Password</th>
                            <th class="text-start">พนักงาน</th>
                            <th class="text-start">แผนก</th>
                            <th class="text-start">วันที่สร้าง</th>
                            <th class="text-start">แก้ไขล่าสุด</th>
                            <th class="text-start">สถานะ</th>
                            <th class="text-start">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-start">#</td>
                                <td class="text-start">@item.Username</td>
                                <td class="text-start">@item.Password</td>
                                <td class="text-start">@item.FirstName @item.LastName (@item.NickName)</td>
                                <td class="text-start">@item.DepartmentName</td>
                                <td class="text-start">@item.CreateDate</td>
                                <td class="text-start">@item.UpdateDate</td>
                                <td class="col-status">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">เปิดใช้งาน</span>                                        
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">ปิดใช้งาน</span>                                        
                                    }
                                </td>
                                <td class="col-action">
                                    <button class="btn btn-info btn-sm" onclick="showEditUserModal(@item.UserID)">
                                        <i class="fas fa-pen-square"></i> แก้ไข
                                    </button>
                                    @if (item.IsActive)
                                    {
                                        <button class="btn btn-danger btn-sm" onclick="toggleUserStatus(@item.UserID, false)">
                                            <i class="fas fa-window-close"></i> ปิดใช้งาน
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success btn-sm" onclick="toggleUserStatus(@item.UserID, true)">
                                            <i class="fas fa-check-square"></i> เปิดใช้งาน
                                        </button>                                        
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-add-user">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">ลงทะเบียนผู้ใช้ใหม่</h4>
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card card-default">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-4 mt-2">
                                    <label>พนักงาน</label>
                                    <select id="ddlEmp" name="ddlEmp" class="form-control" style="width: 100%">
                                        <option value="" selected>-- เลือกพนักงาน --</option>
                                        @foreach (var emp in ViewBag.Employees)
                                        {
                                            <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.NickName)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>ชื่อผู้ใช้</label>
                                    <input type="text" id="txtAddUsername" class="form-control" placeholder="Enter ..." disabled>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>รหัสผ่าน</label>
                                    <input type="password" id="txtAddPassword" class="form-control" placeholder="Enter ..." disabled>

                                    <label>ยืนยันรหัสผ่าน</label>
                                    <input type="password" id="txtAddConfirmPassword" class="form-control" placeholder="Enter ..." disabled>
                                    <div class="invalid-feedback">รหัสผ่านไม่ตรงกัน</div>
                                    <div class="valid-feedback">รหัสผ่านตรงกัน</div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" onclick="CloseModal()">Close</button>
                <button type="button" id="btnConfirmAddUser" class="btn btn-info">ลงทะเบียน</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-edit-user">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">แก้ไขบัญชีผู้ใช้</h4>
                <input type="hidden" id="hddUserId" />
                <button type="button" class="close" onclick="CloseModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card card-default">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-4 mt-2">
                                    <label>เปลี่ยนพนักงาน</label>
                                    <select id="ddlEditEmp" name="ddlEditEmp" class="form-control" style="width: 100%">
                                        <option value="" selected>-- เลือกพนักงาน --</option>
                                        @foreach (var emp in ViewBag.Employees)
                                        {
                                            <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.NickName)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-4 mt-2">
                                    <label>เปลี่ยนชื่อผู้ใช้</label>
                                    <input type="text" id="txtEditUsername" class="form-control" >
                                </div>
                                <div class="col-4 mt-2">
                                    <label>เปลี่ยนรหัสผ่าน</label>
                                    <input type="password" id="txtEditPassword" class="form-control" >

                                    <label>ยืนยันรหัสผ่าน</label>
                                    <input type="password" id="txtEditConfirmPassword" class="form-control" >
                                    <div class="invalid-feedback">รหัสผ่านไม่ตรงกัน</div>
                                    <div class="valid-feedback">รหัสผ่านตรงกัน</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" onclick="CloseModal()">Close</button>
                <button type="button" id="btnConfirmEditUser" class="btn btn-info">ยืนยันการแก้ไข</button>
            </div>
        </div>
    </div>
</div>

<div id="page-title" data-title="จัดการบัญชีผู้ใช้"></div>