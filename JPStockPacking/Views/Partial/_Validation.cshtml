<div class="container-fluid">
    <div class="card d-flex">
        <div class="card-header">
            <h3 class="card-title">ตรวจสอบใบแจ้งหนี้</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" id="dtInvFromDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Invoice</label>
                        <input type="text" id="txtInvoice" class="form-control">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group clearfix">
                        <div class="chk-wrapper d-inline me-3">
                            <input type="radio" id="radioPrimary1" name="r1" value="1" class="custom-radio" checked>
                            <label for="radioPrimary1" class="ms-1 mb-0">
                                ทั้งหมด
                            </label>
                        </div>
                        <div class="chk-wrapper d-inline me-3">
                            <input type="radio" id="radioPrimary2" name="r1" value="2" class="custom-radio">
                            <label for="radioPrimary2" class="ms-1 mb-0">
                                รายการที่ผิด
                            </label>
                        </div>
                        <div class="chk-wrapper d-inline">
                            <input type="radio" id="radioPrimary3" name="r1" value="3" class="custom-radio">
                            <label for="radioPrimary3" class="ms-1 mb-0">
                                รายการที่ถูก
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" id="dtInvToDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>OrderNo</label>
                        <input type="text" id="txtInvOrderNo" class="form-control">
                    </div>
                </div>
            </div>
            <button class="btn btn-secondary" onclick="ClearInvoice()">Clear</button>
            <button class="btn btn-primary" onclick="FindInvoice()">ค้นหา</button>
            <button class="btn btn-warning d-none" id="btnMarkInvoiceAsRead" onclick="MarkInvoiceAsRead()"><i class="fas fa-bookmark"></i> ทำเครื่องหมายว่าตรวจสอบแล้ว</button>
            <button class="btn btn-success d-none" id="btnFindConfirmedInvoice" onclick="FindConfirmedInvoice()"><i class="fas fa-check-double"></i> ตรวจสอบแล้ว</button>
        </div>
    </div>

    <div class="card d-flex">
        <div class="card-header">
            <h3 class="card-title">ตรวจสอบสถานะการเก็บ</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" id="dtLocFromDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" id="dtLocToDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group">
                        <label>OrderNo</label>
                        <input type="text" id="txtLocOrderNo" class="form-control">
                    </div>
                    <div class="form-group clearfix">
                        <div class="chk-wrapper d-inline me-3">
                            <input type="radio" id="rdJobNormal" name="rdIsSample" value="false" class="custom-radio" checked>
                            <label for="rdJobNormal" class="ms-1 mb-0">
                                Normal
                            </label>
                        </div>
                        <div class="chk-wrapper d-inline">
                            <input type="radio" id="rdJobSample" name="rdIsSample" value="true" class="custom-radio">
                            <label for="rdJobSample" class="ms-1 mb-0">
                                Sample
                            </label>
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <div class="chk-wrapper d-inline me-3">
                            <input type="radio" id="rdOver30" name="rdDays" value="true" class="custom-radio" checked>
                            <label for="rdOver30" class="ms-1 mb-0">
                                เกิน 30 วัน
                            </label>
                        </div>
                        <div class="chk-wrapper d-inline">
                            <input type="radio" id="rdUnder30" name="rdDays" value="false" class="custom-radio">
                            <label for="rdUnder30" class="ms-1 mb-0">
                                ไม่เกิน
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-secondary" onclick="ClearLocInput()">Clear</button>
                    <button class="btn btn-primary" onclick="FindUnalocateLot()">ค้นหา</button>
                    <button class="btn btn-info" onclick="PrintUnalocateLot()"><i class="fas fa-print"></i></button>
                </div>
                <div class="col-md-9">
                    <table id="tblUnallocated" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Lot No</th>
                                <th>List No</th>
                                <th>Article</th>
                                <th>Exported</th>
                                <th>Stored</th>
                                <th>Melted</th>
                                <th>Unallocated</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card d-flex">
        <div class="card-header">
            <h3 class="card-title">รายการเก็บแบบสูญหาย</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" id="dtSendLostFromDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" id="dtSendLostToDate" class="form-control" value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group">
                        <label>OrderNo</label>
                        <input type="text" id="txtSendLostOrderNo" class="form-control">
                    </div>
                    <button class="btn btn-secondary" onclick="ClearSendLostInput()">Clear</button>
                    <button class="btn btn-primary" onclick="FindSendLostList()">ค้นหา</button>
                </div>
                <div class="col-md-9">
                    <table id="tblSendLostList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Order No</th>
                                <th>Lot No</th>
                                <th>List No</th>
                                <th>Article</th>
                                <th>QTY</th>
                                <th>WG</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="page-title" data-title="ตรวจสอบ"></div>